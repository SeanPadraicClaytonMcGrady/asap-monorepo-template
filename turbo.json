{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"//#format-and-lint": {
			"inputs": ["!v2/mvp/**"]
		},
		"//#format-and-lint:fix": {
			"cache": false,
			"inputs": ["!v2/mvp/**"]
		},
		"topo": {
			"dependsOn": ["^topo"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".cache/tsbuildinfo.json", "dist/**", ".next/**"]
		},
		"start": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"dev": {
			"dependsOn": ["^dev"],
			"cache": false,
			"persistent": false
		},
		"typecheck": {
			"dependsOn": ["^topo", "^build"],
			"outputs": [".cache/tsbuildinfo.json"]
		},
		"clean": {
			"cache": false
		},
		"push": {
			"cache": false,
			"interactive": true
		},
		"studio": {
			"cache": false,
			"persistent": true
		},
		"ui-add": {
			"cache": false,
			"interactive": true
		},
		"usecase:add": {
			"cache": false,
			"interactive": true
		},
		"test": {
			"dependsOn": ["transit"]
		},
		"transit": {
			"dependsOn": ["^transit"]
		},
		"generate": {
			"cache": false,
			"interactive": true
		}
	},
	"globalEnv": [
		"BASE_URL",
		"POSTGRES_URL",
		"AUTH_DISCORD_ID",
		"AUTH_DISCORD_SECRET",
		"AUTH_REDIRECT_PROXY_URL",
		"AUTH_GOOGLE_ID",
		"AUTH_GOOGLE_SECRET",
		"AUTH_SECRET",
		"PORT",
		"AI_API_KEY",
		"GEMINI_API_KEY",
		"GEOCODING_API_KEY"
	],
	"globalPassThroughEnv": [
		"NODE_ENV",
		"CI",
		"VERCEL",
		"VERCEL_ENV",
		"VERCEL_URL",
		"npm_lifecycle_event"
	]
}
