{
	"extends": "@asap/tsconfig/base.json",
	"compilerOptions": {
		"lib": ["ES2022", "dom", "dom.iterable", "webworker"],
		"jsx": "preserve",
		"paths": {
			"~/*": ["./src/*"]
		},
		"plugins": [{ "name": "next" }],
		"types": [
			// This allows Serwist to type `window.serwist`.
			"@serwist/next/typings"
		]
	},
	"include": [".", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "public/sw.js"]
}
