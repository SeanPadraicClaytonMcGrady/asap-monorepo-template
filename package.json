{
	"name": "create-t3-turbo",
	"private": true,
	"engines": {
		"node": "^22.21.0",
		"pnpm": "^10.19.0"
	},
	"packageManager": "pnpm@10.19.0",
	"scripts": {
		"build": "turbo run build",
		"clean": "git clean -xdf node_modules",
		"clean:workspaces": "turbo run clean",
		"auth:generate": "pnpm -F @asap/auth generate",
		"db:check-migrations": "turbo -F @asap/db check-migrations",
		"db:generate": "turbo -F @asap/db generate",
		"db:push": "turbo -F @asap/db push",
		"db:studio": "turbo -F @asap/db studio",
		"usecase:add": "turbo -F @asap/server usecase:add",
		"server:test": "turbo -F @asap/server test",
		"server:test:affected": "turbo run test --filter='[@asap/server]' --since=origin/main",
		"ci:build": "turbo run build",
		"ci:test": "pnpm server:test:affected && pnpm db:check-migrations",
		"dev": "turbo watch dev --continue",
		"dev:next": "turbo watch dev -F @asap/nextjs...",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"postinstall": "turbo run format-and-lint:fix",
		"typecheck": "turbo run typecheck",
		"ui-add": "turbo run ui-add",
		"android": "expo run:android",
		"ios": "expo run:ios"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@turbo/gen": "^2.5.8",
		"dotenv-cli": "^10.0.0",
		"turbo": "^2.5.8",
		"typescript": "catalog:"
	}
}
